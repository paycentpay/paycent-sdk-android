<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	android:layout_margin="@dimen/card_margin"
	android:elevation="3dp"
	card_view:cardCornerRadius="@dimen/card_album_radius">

	<RelativeLayout
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:background="@drawable/background_activated">

		<ImageView
			android:id="@+id/order_list_icon"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:background="@android:color/darker_gray"
			android:cropToPadding="true"
			android:scaleType="centerInside"
			/>

		<TextView
			android:id="@+id/order_list_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/order_list_icon"
			android:layout_alignParentTop="true"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:textStyle="bold"
			/>

		<TextView
			android:id="@+id/order_list_num"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignLeft="@id/order_list_title"
			android:layout_below="@id/order_list_title"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:textStyle="normal"
			/>

		<TextView
			android:id="@+id/order_list_amount"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp"
			android:layout_alignLeft="@id/order_list_title"
			android:layout_below="@id/order_list_num"
			android:paddingLeft="4dp"
			android:paddingRight="4dp"
			android:textStyle="italic"
			android:textSize="18sp"
		    android:textColor="@android:color/holo_red_dark"
			/>

	</RelativeLayout>

</android.support.v7.widget.CardView>


